
<%= simple_form_for(@professor, :html => { :class => 'form-vertical' })  do |f| %>
    <%= f.input :nome, :input_html => { :class => 'text_field span12' }%>
    <%= f.input :email %>
    <%= f.input :nascimento, :as => :string,  :input_html => { data: {behaviour: "datepicker"}} %>
    <%= f.input :graduacao, :as => :text, :input_html => { :cols => 80, :rows => 10,:class => 'text_area span12' } %>

    <div class="form-actions">
        <%= f.button :submit, :class => 'btn btn-primary' %>
        <%= f.button :button, 'Cancel', :type => 'reset', :class => 'btn btn-danger' %>
    </div>
<% end %>






<% if false%>
<%= form_for @professor, :html => { :class => 'form-horizontal' } do |f| %>

  <div >
    <%= f.label :nome, :class => 'control-label' %>
    <div >
      <%= f.text_field :nome, :class => 'text_field span12' %>
    </div>
  </div>
  <div >
    <%= f.label :nascimento, :class => 'control-label' %>
    <div >
        <%= f.text_field :nascimento, 'data-behaviour' => 'datepicker'  %>
    </div>
  </div>
    <div >
      <%= f.label :email, :class => 'control-label' %>
      <div >
        <%= f.text_field :email %>
      </div>
    </div>
  <div class="control-group">
    <%= f.label :graduacao, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area  :graduacao, :class => 'text_area span12' , :cols => 15, :rows => 10 %>
    </div>
  </div>


  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                professores_path, :class => 'btn' %>
  </div>
<% end %>
<% end %>